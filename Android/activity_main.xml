<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/layout">

    <TextView
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="침대"
        android:id="@+id/txtArduino"
        android:textSize="15pt"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/txtArduino1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="탁상"
        android:id="@+id/txtArduino1"
        android:textSize="15pt"
        android:textStyle="bold"
        android:layout_above="@+id/btnLed3"
        android:layout_alignLeft="@+id/btnLed3"
        android:layout_alignStart="@+id/btnLed3"
        android:gravity="center_horizontal"
        android:textColor="#000000" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="커튼"
        android:id="@+id/txtArduino2"
        android:textSize="15pt"
        android:textStyle="bold"
        android:layout_above="@+id/btnLed5"
        android:layout_alignLeft="@+id/btnLed5"
        android:layout_alignStart="@+id/btnLed5"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textIsSelectable="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:text="▲"
        android:id="@+id/btnLed1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnLed2"
        android:onClick="OnClick_button1"
        android:textSize="15pt" />
    <Button
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:text="▼"
        android:id="@+id/btnLed2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:onClick="OnClick_button2"
        android:textSize="15pt" />

    <Button
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:text="▲"
        android:id="@+id/btnLed3"
        android:layout_alignTop="@+id/btnLed1"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnLed4"
        android:onClick="OnClick_button3"
        android:textSize="15pt" />

    <Button
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:text="▼"
        android:id="@+id/btnLed4"
        android:layout_below="@+id/btnLed1"
        android:layout_alignLeft="@+id/btnLed3"
        android:layout_alignStart="@+id/btnLed3"
        android:onClick="OnClick_button4"
        android:textSize="15pt" />

    <Button
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:text="▲"
        android:id="@+id/btnLed5"
        android:layout_alignTop="@+id/btnLed3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="OnClick_button5"
        android:textSize="15pt" />

    <Button
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:text="▼"
        android:id="@+id/btnPado"
        android:layout_alignTop="@+id/btnLed4"
        android:layout_alignLeft="@+id/btnLed5"
        android:layout_alignStart="@+id/btnLed5"
        android:onClick="OnClick_button6"
        android:textSize="15pt" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/txtArduino"
        android:src="@drawable/deg1" />


</RelativeLayout>
